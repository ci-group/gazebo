<?xml version="1.0" ?>
<sdf version="1.5">
  <world name="default">
    <!-- A global light source -->
    <include>
      <uri>model://sun</uri>
    </include>
    <!-- A ground plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Testing the automatic population of objects -->
    <population name="beer_population1">
      <model name="beer1">
        <include>
          <uri>model://beer</uri>
        </include>
      </model>
      <region>
        <cuboid>
          <min>3 3 0</min>
          <max>4 4 0.1</max>
        </cuboid>
      </region>
      <density>1.0</density>
      <model_count>20</model_count>
      <prevent_collisions>false</prevent_collisions>
      <distribution>random</distribution>
    </population>


<!-- Generic Pioneer2dx Model -->
<model type="physical" name="default_pioneer_model">
  <canonicalBody>chassis_body</canonicalBody>
  
  <link name="chassis_body">
    <origin xyz="0.0 0.0 0.16" />
  
    <collision name="chassis_geom">
      <geometry>
        <box size="0.445 0.277 0.17"/>
      </geometry>
      <contact_coefficients mu="1"/>
      <mass>1.0</mass>
    </collision>
  
    <visual>
      <origin xyz="0 0 0.04" rpy="0 180 0"/>
      <geometry>
        <mesh filename="Pioneer2dx/chassis.mesh"/>
      </geometry>
      <material name="Gazebo/Pioneer2Body"/>
    </visual>
  
    <visual>
      <origin xyz="0.015 0 0.095"/>
      <geometry>
        <mesh filename="Pioneer2dx/chassis_top.mesh"/>
      </geometry>
      <material name="Gazebo/Black"/>
    </visual>
  
    <visual>
      <origin xyz="0.21 0.0 0.068"/>
      <geometry>
        <mesh filename="Pioneer2dx/sonarbank.mesh"/>
      </geometry>
      <material name="Gazebo/Gold"/>
    </visual>
  
    <visual>
      <origin xyz="-0.178 0.0 0.068" rpy="0 0 180"/>
      <geometry>
        <mesh filename="Pioneer2dx/sonarbank.mesh"/>
      </geometry>
      <material name="Gazebo/Gold"/>
    </visual>
  
  </link>
  
  <link name="left_wheel">
    <origin xyz="0.1 -.17 0.11" rpy="0 90 90"/>
  
    <collision name="left_wheel_geom">
      <geometry>
        <cylinder radius="0.11" length="0.05"/>
      </geometry>
      <mass>0.1</mass>
    </collision>
  
    <visual>
      <geometry>
        <mesh filename="Pioneer2dx/tire.mesh"/>
      </geometry>
      <material name="Gazebo/Black"/>
    </visual>
  
    <visual>
      <geometry>
        <mesh filename="Pioneer2dx/wheel.mesh"/>
      </geometry>
      <material name="Gazebo/Gold"/>
    </visual>
  
    <visual>
      <origin xyz="0 0 0.015"/>
      <geometry>
        <cylinder radius="0.04" length="0.08"/>
      </geometry>
      <material name="Gazebo/Black"/>
    </visual>
  </link>

  <link name="right_wheel">
    <origin xyz="0.1 .17 0.11" rpy="0 90 90"/>
  
    <collision name="right_wheel_geom">
      <geometry>
        <cylinder radius="0.11" length="0.05"/>
      </geometry>
      <mass>0.1</mass>
    </collision>
  
    <visual>
      <geometry>
        <mesh filename="Pioneer2dx/tire.mesh"/>
      </geometry>
      <material name="Gazebo/Black"/>
    </visual>
  
    <visual>
      <geometry>
        <mesh filename="Pioneer2dx/wheel.mesh"/>
      </geometry>
      <material name="Gazebo/Gold"/>
    </visual>
  
    <visual>
      <origin xyz="0 0 -0.015"/>
      <geometry>
        <cylinder radius="0.04" length="0.08"/>
      </geometry>
      <material name="Gazebo/Black"/>
    </visual>
  </link>

  <link name="castor_body">
    <origin xyz="-0.200 0 0.04" rpy="0 0 0"/>
  
    <collision name="castor_geom">
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
      <mass>0.1</mass>
    </collision>
  
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="Gazebo/Black"/>
    </visual>
  </link>

  <joint type="hinge" name="left_wheel_hinge">
    <child link="left_wheel"/>
    <parent link="chassis_body"/>
    <anchorOffset>0 0 0.04</anchorOffset>
    <axis xyz="0 1 0"/>
    <erp>0.8</erp>
    <cfm>10e-5</cfm>
  </joint>
  
  <joint type="hinge" name="right_wheel_hinge">
    <child link="right_wheel"/>
    <parent link="chassis_body"/>
    <anchorOffset>0 0 -0.04</anchorOffset>
    <axis xyz="0 1 0"/>
    <erp>0.8</erp>
    <cfm>10e-5</cfm>
  </joint>
  
  <joint type="ball" name="ball_joint">
    <child link="castor_body"/>
    <parent link="chassis_body"/>
    <erp>0.8</erp>
    <cfm>10e-5</cfm>
  </joint>

</model>

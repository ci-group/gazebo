<?xml version="1.0"?> 
<gazebo version="1.0">
  <world name="default">
    <scene>
      <ambient rgba="1.0 1.0 1.0 1"/>
      <background rgba="0 0 0 1.0"/>
      <shadows enabled="true"/>
    </scene>

    <physics type="ode">
      <gravity xyz="0 0 -10.0"/>
      <ode>
        <solver type="quick" dt="0.001" iters="1000" sor="1.3"/>
        <constraints cfm="0.0" erp="1.0" contact_max_correcting_vel="0.0" contact_surface_layer="0.0"/>
      </ode>
    </physics>

    <include filename="ground_plane.model"/>

    <model name="box_1">
      <origin pose="0 0 0.5 0 0 0"/>
      <link name="link">
        <inertial mass="1.0">
          <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
        </inertial>

        <collision name="collision">
          <geometry>
            <mesh filename="cube_20k.stl" scale="0.5 0.5 0.5"/>
          </geometry>
          <surface>
            <friction>
              <ode mu="1" mu2="1"/>
            </friction>
            <contact>
              <ode max_vel="0"/>
            </contact>
          </surface>
        </collision>

        <visual name="visual">
          <geometry>
            <mesh filename="cube_20k.stl" scale="0.5 0.5 0.5"/>
          </geometry>
          <material script="Gazebo/WoodPallet"/>
        </visual>
      </link>
    </model>


    <model name="box_2">
      <origin pose="0 0 2.0 0 0 0"/>
      <link name="link">
        <inertial mass="1.0">
          <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
        </inertial>

        <collision name="collision">
          <geometry>
            <mesh filename="cube_20k.stl" scale="0.5 0.5 0.5"/>
          </geometry>
          <surface>
            <friction>
              <ode mu="1" mu2="1"/>
            </friction>
            <contact>
              <ode max_vel="0"/>
            </contact>
          </surface>
        </collision>

        <visual name="visual">
          <geometry>
            <mesh filename="cube_20k.stl" scale="0.5 0.5 0.5"/>
          </geometry>
          <material script="Gazebo/WoodPallet"/>
        </visual>
      </link>
    </model>


    <light type="directional" name="sun" cast_shadows="true">
      <origin pose="0 0 10 0 0 0"/>
      <diffuse rgba=".8 .8 .8 1"/>
      <specular rgba=".1 .1 .1 1"/>
      <attenuation range="10" constant="0.8" linear="0.01" quadratic="0.0"/>
      <direction xyz="0 .5 -.5"/>
    </light>

  </world>
</gazebo>


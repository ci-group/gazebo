<?xml version="1.0"?> 
<gazebo version="1.0">
  <world name="default">
    <scene>
      <ambient rgba="0.1 0.1 0.1 1"/>
      <background rgba="0 0 0 1">
        <sky material="Gazebo/CloudySky"/>
      </background>
      <shadows enabled="false"/>
    </scene>

    <physics type="ode">
      <gravity xyz="0 0 0"/>
      <ode>
        <solver type="quick" dt="0.001" iters="100" sor="1.3"/>
        <constraints cfm="0.0" erp="0.2" contact_max_correcting_vel="100.0" contact_surface_layer="0.001"/>
      </ode>
    </physics>

    <include filename="ground_plane.model"/>

    <model name="projector_model" static="true">
      <origin pose="0 0 1 0.0 0.0 0"/>
      <link name="projector_link">
        <inertial mass="1.0">
          <inertia ixx="1" ixy="0" ixz="0" 
                   iyy="1" iyz="0" 
                   izz="1"/>
        </inertial>

        <collision name="collision">
          <geometry>
            <sphere radius="0.1"/>
          </geometry>
        </collision>

        <visual name="visual">
          <geometry>
            <sphere radius="0.1"/>
          </geometry>
          <material script="Gazebo/Grey"/>
        </visual>

        <sensor name="camera" type="camera" always_on="true" update_rate=".1" visualize='true'>
          <origin pose="0 0 0 0 0 0"/>
          <camera>
            <horizontal_fov angle="1.04719755"/>
            <image width="640" height="480" format="R8G8B8"/>
            <clip near="0.1" far="50"/>
            <save enabled="true" path="/tmp/camera"/>
          </camera>

          <plugin filename="libCameraPlugin.so" name="camera_plugin"/>
        </sensor>

      </link>
      <plugin filename="libProjectorPlugin.so" name="camera_plugin">
        <alwaysOn>1</alwaysOn>
        <updateRate>15.0</updateRate>
        <textureName>stereo_projection_pattern_high_res_red.png</textureName>
        <filterTextureName>stereo_projection_pattern_filter.png</filterTextureName>
        <textureTopicName>projector_wg6802418_controller/image</textureTopicName>
        <projectorTopicName>projector_wg6802418_controller/projector</projectorTopicName>
        <fov>0.959931088597</fov>
        <nearClipDist>0.1</nearClipDist>
        <farClipDist>10</farClipDist>
        <bodyName>projector_link</bodyName>
        <xyz>0 0 0</xyz>
        <rpy>0 0 0</rpy>
      </plugin>
    </model>

    <model name="texture_test_model" static="true">
      <origin pose="3 0 1 0.0 0.0 0"/>
      <link name="texture_test_link">
        <inertial mass="1.0">
          <inertia ixx="1" ixy="0" ixz="0" 
                   iyy="1" iyz="0" 
                   izz="1"/>
        </inertial>

        <collision name="collision">
          <geometry>
            <sphere radius="0.1"/>
          </geometry>
        </collision>

        <visual name="visual">
          <geometry>
            <sphere radius="0.1"/>
          </geometry>
          <material script="Gazebo/Grey"/>
        </visual>
      </link>
    </model>

    <light type="directional" name="my_light" cast_shadows="false">
      <origin pose="0 0 10 0 0 0"/>
      <diffuse rgba=".9 .9 .9 1"/>
      <specular rgba=".1 .1 .1 1"/>
      <attenuation range="20"/>
      <direction xyz="0 0 -1"/>
    </light>

  </world>
</gazebo>

<?xml version="1.0"?> 
<gazebo version="1.0">
  <world name="default">
    <scene>
      <ambient rgba="1.0 1.0 1.0 1.0"/>
      <background rgba="0 0 0 1"/>
      <shadows enabled="true"/>
    </scene>

    <!-- Physics Engine Parameters -->
    <physics type="ode">
      <gravity xyz="0 0 -9.8"/>
      <ode>
        <solver type="quick" dt="0.001" iters="100" sor="1.3"/>
        <constraints cfm="0.0" erp="0.2"
          contact_max_correcting_vel="100.0" contact_surface_layer="0.001"/>
      </ode>
    </physics>

    <!-- Ground Plane -->
    <model name="plane" static="true">
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane normal="0 0 1"/>
          </geometry>
        </collision>

        <visual name="visual" cast_shadows="false">
          <geometry>
            <plane normal="0 0 1"/>
          </geometry>
          <material script="Gazebo/Grey"/>
        </visual>
      </link>
    </model>

    <!-- Light Source -->
    <light type="directional" name="sun" cast_shadows="true">
      <origin pose="0 0 10 0 0 0"/>
      <diffuse rgba="0.8 0.8 0.8 1"/>
      <specular rgba="0 0 0 1"/>
      <attenuation range="20" constant="0.8" linear="0.01" quadratic="0.0"/>
      <direction xyz="1.0 1.0 -1.0"/>
    </light>

    <model name="collada_mesh_model" static="true">
      <origin pose="0 0 1 0 0 0"/>
      <link name="collada_mesh_link">
        <inertial mass='1.0'>
          <origin pose='0 0 0 0 0 0'/>
          <inertia ixx='1' ixy='0' ixz='0' iyy='1' iyz='0' izz='1'/>
        </inertial>
        <collision name="col">
          <geometry>
            <mesh filename="pr2/base_v0/base.dae"/>
          </geometry>
        </collision>
        <visual name="vis">
          <geometry>
            <mesh filename="pr2/base_v0/base.dae"/>
          </geometry>
        </visual>
      </link>
    </model>
  </world>
</gazebo>

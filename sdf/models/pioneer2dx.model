<gazebo version='1.0'>
  <model name="pioneer2dx" static="1">
  <origin pose="0 0 0 0 0 0"/>

    <link name="chassis">
      <origin pose="0.0 0.0 0.16 0 0 0"/>
   
      <inertial mass="2.0">
        <inertia ixx='1' ixy='0' ixz='0' iyy='1' iyz='0' izz='1'/>
      </inertial> 
      <collision name="collision">
        <geometry>
          <box size="0.445 0.277 0.17"/>
        </geometry>
      </collision>
    
      <visual name="visual">
        <origin pose="0 0 0.04 0 0 0"/>
        <geometry>
          <mesh filename="pioneer2dx/chassis.dae"/>
        </geometry>
      </visual>
    </link>
    
    <link name="right_wheel">
      <origin pose="0.1 -.17 0.11 0 1.5707 1.5707"/>
  
      <inertial mass="0.5">
        <inertia ixx='1' ixy='0' ixz='0' iyy='1' iyz='0' izz='1'/>
      </inertial> 
  
      <collision name="collision">
        <geometry>
          <cylinder radius="0.11" length="0.05"/>
        </geometry>
      </collision>
   
      <visual name="visual">
        <geometry>
          <cylinder radius="0.11" length="0.05"/>
        </geometry>
        <material script="Gazebo/FlatBlack"/>
      </visual>
    </link>

    <link name="left_wheel">
      <origin pose="0.1 .17 0.11 0 1.5707 1.5707"/>
  
      <inertial mass="0.5">
        <inertia ixx='1' ixy='0' ixz='0' iyy='1' iyz='0' izz='1'/>
      </inertial> 
  
      <collision name="collision">
        <geometry>
          <cylinder radius="0.11" length="0.05"/>
        </geometry>
      </collision>

      <visual name="visual">
        <geometry>
          <cylinder radius="0.11" length="0.05"/>
        </geometry>
        <material script="Gazebo/FlatBlack"/>
      </visual>
    </link>
  
    <link name="castor">
      <origin pose="-0.200 0 0.04 0 0 0"/>
  
      <inertial mass="0.5">
        <inertia ixx='1' ixy='0' ixz='0' iyy='1' iyz='0' izz='1'/>
      </inertial> 
  
      <collision name="collision">
        <geometry>
          <sphere radius="0.04"/>
        </geometry>
      </collision>
    
      <visual name="visual">
        <geometry>
          <sphere radius="0.04"/>
        </geometry>
        <material script="Gazebo/FlatBlack"/>
      </visual>
    </link>

    <link name="laser">
      <origin pose="0.2 0 0.3 0 0 0"/>
      <visual name="visual">
        <geometry>
          <mesh filename="hokuyo/hokuyo.dae"/>
        </geometry>
      </visual>
      <sensor name='base_laser' type='ray' always_on='1' update_rate='30' visualize='true'>
        <origin pose='0.01 0 0.03 0 -0 0'/>
        <ray>
          <scan>
            <horizontal samples='640' resolution='1' min_angle='-2.2688999999959423' max_angle='2.2688999999959423'/>
          </scan>
          <range min='0.080000000000000002' max='10' resolution='0.01'/>
        </ray>
        <plugin name='laser' filename='libRayPlugin.so'/>
      </sensor>
    </link>

    <link name="camera">
      <origin pose="0.2 0 0.5 0 0 0"/>
      <visual name="visual">
        <geometry>
          <box size="0.1 0.1 0.1"/>
        </geometry>
      </visual>

      <sensor name='mono' type='camera' always_on='1' update_rate='30' visualize='true'>
        <camera>
          <horizontal_fov angle='1.047'/>
          <image width='320' height='240'/>
          <clip near='0.1' far='100'/>
        </camera>
      </sensor>
    </link>

    <joint type="revolute" name="left_wheel_hinge">
      <origin pose="0 0 -0.04 0 0 0"/>
      <child link="left_wheel"/>
      <parent link="chassis"/>
      <axis xyz="0 1 0"/>
    </joint>
    
    <joint type="revolute" name="right_wheel_hinge">
      <origin pose="0 0 0.04 0 0 0"/>
      <child link="right_wheel"/>
      <parent link="chassis"/>
      <axis xyz="0 1 0"/>
    </joint>
    
    <joint type="ball" name="ball_joint">
      <child link="castor"/>
      <parent link="chassis"/>
    </joint>

    <plugin filename="libDiffDrivePlugin.so" name="diff_drive">
      <left_joint>left_wheel_hinge</left_joint>
      <right_joint>right_wheel_hinge</right_joint>
    </plugin>

  </model>
</gazebo>

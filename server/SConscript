#Import variables
Import('env staticObjs sharedObjs')

dirs = Split('physics rendering sensors models bindings')

for subdir in dirs:
  SConscript('%s/SConscript' % subdir)

sources = Split('main.cc Vector3.cc Quatern.cc Pose3d.cc World.cc XMLConfig.cc Time.cc Entity.cc')

staticObjs.append( env.StaticObject(sources) )
sharedObjs.append( env.SharedObject(sources) )
